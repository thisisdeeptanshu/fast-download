{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ],


  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "help",
    "default_popup": "popup/actions.html"
  }

